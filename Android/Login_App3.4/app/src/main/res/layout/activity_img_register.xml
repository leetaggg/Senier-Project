<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImgRegisterActivity"
    android:orientation="vertical">

    <!--여기에 레이아웃 하나 더넣고 화살표 넣어서 이미지 불러온거 돌려보는거 만들예정-->
    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="310dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_upload_image1"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="#EEEEEE"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                android:src="@drawable/face"/>

            <ImageView
                android:id="@+id/iv_upload_image2"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="#EEEEEE"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                android:src="@drawable/face"/>

            <ImageView
                android:id="@+id/iv_upload_image3"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="#EEEEEE"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                android:src="@drawable/face"/>

            <ImageView
                android:id="@+id/iv_upload_image4"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="#EEEEEE"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                android:src="@drawable/face"/>

            <ImageView
                android:id="@+id/iv_upload_image5"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="#EEEEEE"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                android:src="@drawable/face"/>
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/btn_upload_image"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:text="이미지 업로드"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btn_goAround"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:text="돌아가기"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:src="@drawable/logo2"
        android:layout_gravity="right"/>


</LinearLayout>